using System;
using System.IO;
using Microsoft.AspNetCore.Hosting;
using Microsoft.AspNetCore.Http;
using Microsoft.AspNetCore.Mvc;
using YourProject.Models; // Replace "YourProject" with your project's namespace

public class PropertiesController : Controller
{
    private readonly IWebHostEnvironment _hostEnvironment;
    private readonly YourDbContext _dbContext; // Replace "YourDbContext" with your actual DbContext

    public PropertiesController(IWebHostEnvironment hostEnvironment, YourDbContext dbContext)
    {
        _hostEnvironment = hostEnvironment;
        _dbContext = dbContext;
    }

    // GET: /Properties/Create
    public IActionResult Create()
    {
        return View();
    }

    // POST: /Properties/Create
    [HttpPost]
    [ValidateAntiForgeryToken]
    public IActionResult Create(PropertyViewModel model, IFormFile image)
    {
        if (ModelState.IsValid)
        {
            string uniqueFileName = null;
            if (image != null)
            {
                string uploadsDir = Path.Combine(_hostEnvironment.WebRootPath, "images");
                uniqueFileName = Guid.NewGuid().ToString() + "_" + image.FileName;
                string filePath = Path.Combine(uploadsDir, uniqueFileName);

                using (var fileStream = new FileStream(filePath, FileMode.Create))
                {
                    image.CopyTo(fileStream);
                }
            }

            // Save the property details to the database
            Property property = new Property
            {
                Name = model.Name,
                Price = model.Price,
                Description = model.Description,
                ImagePath = uniqueFileName != null ? "images/" + uniqueFileName : null,
                SellerName = model.SellerName,
                SellerPhoneNumber = model.SellerPhoneNumber,
                SellerEmailId = model.SellerEmailId
            };

            _dbContext.Properties.Add(property);
            _dbContext.SaveChanges();

            return RedirectToAction("Index", "Properties");
        }

        return View(model);
    }
}
