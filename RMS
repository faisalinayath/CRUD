@model MyViewModel
@{
    ViewData["Title"] = "Payment";
}

@{
    int total = 0;
    foreach (var obj in Model.Carts)
    {
        if (Model.Email == obj.Email)
        {
            total += obj.price;
        }
    }

    decimal gst = (18m / 100m) * total; // Use decimal values for division
    decimal final_total = total + gst;
}

